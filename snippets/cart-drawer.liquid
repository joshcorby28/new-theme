<div class="hidden-future">
  <div class="Fract-drawer-overlay" id="cartDrawerOverlay"></div>

  <div class="Fract-drawer" id="cartDrawer">
  <div class="Fract-drawer-header">
    <h2 class="Fract-drawer-title">Your cart</h2>
    <button class="Fract-drawer-close" id="closeCartDrawer" aria-label="Close cart">
      <i class="ph ph-x" style="font-size: 24px;"></i>
    </button>
  </div>

  <div class="Fract-drawer-body" id="cartDrawerBody">
    
    <div class="Fract-drawer-empty" id="emptyCartMessage">
      <div class="Fract-drawer-empty-icon">
        <i class="ph ph-shopping-cart"></i>
      </div>
      <p class="Fract-drawer-empty-text">Your cart is empty</p>
    </div>

    <div class="Fract-drawer-items" id="cartItemsContainer" style="display: none;">
      <!-- Cart items will be dynamically inserted here -->
    </div>
  </div>

  <div class="Fract-drawer-footer" id="cartDrawerFooter" style="display: none;">
    <div class="Fract-drawer-subtotal">
      <span class="Fract-drawer-subtotal-label">subtotal</span>
      <span class="Fract-drawer-subtotal-value" id="cartSubtotal">£0.00</span>
    </div>
    <button class="fract-primary Fract-drawer-checkout-btn" id="checkoutButton">
      Checkout
    </button>
    <p class="Fract-drawer-note">Shipping calculated at checkout</p>
  </div>
  </div>
</div>

<script>
  class CartDrawer {
    constructor() {
      this.drawer = document.getElementById('cartDrawer');
      this.overlay = document.getElementById('cartDrawerOverlay');
      this.closeBtn = document.getElementById('closeCartDrawer');
      this.body = document.getElementById('cartDrawerBody');
      this.itemsContainer = document.getElementById('cartItemsContainer');
      this.emptyMessage = document.getElementById('emptyCartMessage');
      this.footer = document.getElementById('cartDrawerFooter');
      this.subtotalElement = document.getElementById('cartSubtotal');
      this.checkoutButton = document.getElementById('checkoutButton');
      
      this.init();
    }

    init() {
      // Close drawer events
      this.closeBtn.addEventListener('click', () => this.close());
      this.overlay.addEventListener('click', () => this.close());

      // Listen for custom cart update events
      document.addEventListener('cart:update', () => this.fetchCart());
      
      // Checkout button
      this.checkoutButton.addEventListener('click', () => {
        window.location.href = '/checkout';
      });

      // Listen for cart drawer open events
      document.addEventListener('cart:open', () => this.open());

      // Cart icon click event
      const cartIcon = document.getElementById('cart-icon');
      if (cartIcon) {
        cartIcon.addEventListener('click', () => this.open());
      }

      // Initial cart fetch
      this.fetchCart();
    }

    open() {
      this.drawer.classList.add('is-open');
      this.overlay.classList.add('is-visible');
      document.body.style.overflow = 'hidden';
      this.fetchCart();
    }

    close() {
      this.drawer.classList.remove('is-open');
      this.overlay.classList.remove('is-visible');
      document.body.style.overflow = '';
    }

    async fetchCart() {
      try {
        const response = await fetch('/cart.js');
        const cart = await response.json();
        this.renderCart(cart);
      } catch (error) {
        console.error('Error fetching cart:', error);
      }
    }

    renderCart(cart) {
      if (cart.item_count === 0) {
        this.showEmptyState();
        return;
      }

      this.hideEmptyState();
      this.renderItems(cart.items);
      this.updateSubtotal(cart.total_price);
    }

    showEmptyState() {
      this.emptyMessage.style.display = 'flex';
      this.itemsContainer.style.display = 'none';
      this.footer.style.display = 'none';
    }

    hideEmptyState() {
      this.emptyMessage.style.display = 'none';
      this.itemsContainer.style.display = 'flex';
      this.footer.style.display = 'block';
    }

    renderItems(items) {
      // Build a map of max inventory per cart line (by key) and render HTML
      this.itemMaxMap = {};
      this.itemsContainer.innerHTML = items.map(item => {
        const max = this.getMaxForItem(item);
        this.itemMaxMap[item.key] = max;
        return this.createItemHTML(item);
      }).join('');
      
      // Add event listeners to quantity buttons
      this.itemsContainer.querySelectorAll('.Fract-drawer-quantity-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const key = e.currentTarget.dataset.key;
          const action = e.currentTarget.dataset.action;
          const currentQty = parseInt(e.currentTarget.dataset.quantity);
          const max = this.itemMaxMap ? this.itemMaxMap[key] : null;
          
          if (action === 'increase') {
            if (max !== null && currentQty >= max) {
              console.log('[drawer-qty-debug] Increase click at max, ignoring', { key, currentQty, max });
              return;
            }
            let next = currentQty + 1;
            if (max !== null && next > max) {
              next = max;
            }
            console.log('[drawer-qty-debug] Increase click', { key, currentQty, next, max });
            this.updateQuantity(key, next);
          } else if (action === 'decrease' && currentQty > 1) {
            const next = currentQty - 1;
            console.log('[drawer-qty-debug] Decrease click', { key, currentQty, next });
            this.updateQuantity(key, next);
          }
        });
      });

      // Add event listeners to remove buttons
      this.itemsContainer.querySelectorAll('.Fract-drawer-item-remove').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const key = e.currentTarget.dataset.key;
          this.removeItem(key);
        });
      });
    }

    getMaxForItem(item) {
      const manage = item.variant_inventory_management;
      const policy = item.variant_inventory_policy;
      const qty = item.variant_inventory_quantity;

      if (!manage || policy === 'continue') {
        return null;
      }

      const parsed = Number(qty);
      if (isNaN(parsed) || parsed <= 0) {
        console.log('[drawer-qty-debug] Item has no positive inventory, treating as uncapped', {
          key: item.key,
          variant_id: item.variant_id,
          qty
        });
        return null;
      }

      return parsed;
    }

    createItemHTML(item) {
      const image = item.featured_image?.url || '';
      const title = item.product_title;
      const variant = item.variant_title !== 'Default Title' ? item.variant_title : '';
      const price = this.formatMoney(item.final_line_price);
      const quantity = item.quantity;
      const key = item.key;

      return `
        <div class="Fract-drawer-item">
          <div class="Fract-drawer-item-image">
            ${image ? `<img src="${image}" alt="${title}" loading="lazy">` : ''}
          </div>
          <div class="Fract-drawer-item-details">
            <h3 class="Fract-drawer-item-title">${title}</h3>
            ${variant ? `<p class="Fract-drawer-item-variant">${variant}</p>` : ''}
            <p class="Fract-drawer-item-price">${price}</p>
            <div class="Fract-drawer-item-quantity">
              <button class="Fract-drawer-quantity-btn" data-key="${key}" data-action="decrease" data-quantity="${quantity}" ${quantity <= 1 ? 'disabled' : ''}>
                <i class="ph ph-minus"></i>
              </button>
              <span class="Fract-drawer-quantity-value">${quantity}</span>
              <button class="Fract-drawer-quantity-btn" data-key="${key}" data-action="increase" data-quantity="${quantity}">
                <i class="ph ph-plus"></i>
              </button>
            </div>
          </div>
          <button class="Fract-drawer-item-remove" data-key="${key}" aria-label="Remove item">
            <i class="ph ph-trash" style="font-size: 20px;"></i>
          </button>
        </div>
      `;
    }

    async updateQuantity(key, quantity) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ id: key, quantity: quantity })
        });
        const cart = await response.json();
        this.renderCart(cart);
      } catch (error) {
        console.error('Error updating quantity:', error);
      }
    }

    async removeItem(key) {
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ id: key, quantity: 0 })
        });
        const cart = await response.json();
        this.renderCart(cart);
      } catch (error) {
        console.error('Error removing item:', error);
      }
    }

    updateSubtotal(totalPrice) {
      this.subtotalElement.textContent = this.formatMoney(totalPrice);
    }

    formatMoney(cents) {
      const amount = (cents / 100).toFixed(2);
      return `£${amount}`;
    }
  }

  // Initialize cart drawer when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new CartDrawer();
    });
  } else {
    new CartDrawer();
  }

  // Helper function to open cart drawer from anywhere
  window.openCartDrawer = function() {
    document.dispatchEvent(new CustomEvent('cart:open'));
  };
</script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const productId = '{{ product.id }}';
  const form = document.getElementById(`product-form-${productId}`);
  if (!form) return;

  const addButton = form.querySelector('.add-to-cart');
  const variantIdInput = document.getElementById(`selected-variant-id-${productId}`);
  const quantityInput = form.querySelector(`#qty-${productId}`);

  // Avoid multiple event listeners
  if (addButton.dataset.bound) return;
  addButton.dataset.bound = true;

  // Open cart drawer helper
  function openCartDrawer() {
    document.dispatchEvent(new CustomEvent('cart:open'));
  }

  // Update cart icon badge helper
  async function updateCartBadge() {
    try {
      const res = await fetch('/cart.js', { headers: { 'Accept': 'application/json' } });
      const cart = await res.json();
      const cartLink = document.querySelector('a[href="{{ routes.cart_url }}"]');
      if (!cartLink) return;

      let sup = cartLink.querySelector('sup');
      if (!sup) {
        sup = document.createElement('sup');
        cartLink.prepend(sup);
      }

      sup.textContent = cart.item_count > 0 ? cart.item_count : '';
    } catch (err) {
      console.error('Error updating cart badge', err);
    }
  }

  // Add to cart click handler
  addButton.addEventListener('click', async function(e) {
    e.preventDefault();

    const variantId = variantIdInput.value;
    const quantity = Math.max(parseInt(quantityInput.value) || 1, 1);

    try {
      // Add item via AJAX
      await fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
        body: JSON.stringify({ id: variantId, quantity: quantity })
      });

      // Trigger drawer update & open
      document.dispatchEvent(new CustomEvent('cart:update'));
      openCartDrawer();

      // Update cart icon
      updateCartBadge();
    } catch (err) {
      console.error('Error adding to cart', err);
    }
  });
});
</script>
