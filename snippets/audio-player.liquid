<div class="player-overlay">
  <div class="player">
    <button id="playPauseBtn" aria-label="Play">
      <!-- Play Icon (SVG) -->
      <svg id="playIcon" viewBox="0 0 64 64" width="28" height="28" fill="white">
        <polygon style="fill:white;" points="16,12 52,32 16,52" />
      </svg>
      <!-- Pause Icon (SVG) -->
      <svg id="pauseIcon" viewBox="0 0 64 64" width="28" height="28" fill="white" style="display: none;">
        <rect style="fill:white;" x="16" y="12" width="10" height="40"/>
        <rect style="fill:white;" x="38" y="12" width="10" height="40"/>
      </svg>
    </button>
    {% if settings.player_image %}
      <img id="record" src="{{ settings.player_image | img_url: '100x' }}" alt="Record">
    {% endif %}
{% if settings.player_audio contains 'spotify.com' %}
  <iframe
    id="spotifyPlayer"
    style="border-radius:12px"
    src="{{ settings.player_audio }}"
    width="100%" height="80"
    frameborder="0"
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy">
  </iframe>

{% elsif settings.player_audio contains 'youtube.com' or settings.player_audio contains 'youtu.be' %}
  <iframe
    id="youtubePlayer"
    width="100%" height="200"
    src="{{ settings.player_audio }}"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen>
  </iframe>

{% elsif settings.player_audio %}
  <audio id="audio" src="{{ settings.player_audio }}"></audio>
{% endif %}

  </div>
</div>


<script>
  const playPauseBtn = document.getElementById('playPauseBtn');
  const playIcon = document.getElementById('playIcon');
  const pauseIcon = document.getElementById('pauseIcon');
  const record = document.getElementById('record');
  const audio = document.getElementById('audio');
  const player = document.querySelector('.player');

  let isPlaying = false;

  playPauseBtn.addEventListener('click', () => {
    // If there's an <audio> element, control it
    if (audio) {
      if (isPlaying) {
        audio.pause();
      } else {
        audio.play();
      }
    }

    // Always toggle styling (for iframe embeds like YouTube/Spotify)
    isPlaying = !isPlaying;
    playIcon.style.display = isPlaying ? 'none' : 'block';
    pauseIcon.style.display = isPlaying ? 'block' : 'none';
    player.classList.toggle('playing', isPlaying);
  });
</script>


<style>
  .player {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 2;
    text-align: center;
    pointer-events: auto;
  }

  #playPauseBtn {
    background: none;
    border: none;
    cursor: pointer;
    position: relative;
    z-index: 2;
  }

  #record {
    position: absolute;
    top: -30px;
    left: -30px;
    outline: 2px solid white;
    width: 40px;
    height: 40px;
    border-radius: 100%;
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
    z-index: 1;
  }

  .playing #record {
    opacity: 1;
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
