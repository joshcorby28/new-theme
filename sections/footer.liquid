<footer class="main-footer">
  <div class="footer-inner">
  <div class="footer__copyright">
    &copy;
    {{ 'now' | date: '%Y' }}
    {{ shop.name | link_to: routes.root_url }}, {{ powered_by_link }}
  </div>

  <div class="footer__links">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

      {% if section.settings.show_social %}
    <div class="footer__social">
      {% if section.settings.instagram_url != blank %}
        <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener">Instagram</a>
      {% endif %}
      {% if section.settings.facebook_url != blank %}
        <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener">Facebook</a>
      {% endif %}
      {% if section.settings.youtube_url != blank %}
        <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener">YouTube</a>
      {% endif %}
      {% if section.settings.tiktok_url != blank %}
        <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener">TikTok</a>
      {% endif %}
      {% if section.settings.pinterest_url != blank %}
        <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener">Pinterest</a>
      {% endif %}
    </div>
  {% endif %}


  </div>
</footer>

{% stylesheet %}
  footer {
    margin-top: 2rem;
    border-top:1px solid #121212;
  }
  .footer-inner {
    display: flex;
    padding-top:2rem;
    padding-bottom: 2rem;
    max-width:95%;
    margin: 0 auto;
    justify-content: space-between;
  }
  footer a {
    text-decoration: none;
    color: var(--color-foreground);
  }
  .footer__copyright {
    font-size:12px;
    color:#121212;
  }
  footer .footer__links,
  footer .footer__payment {
    display: flex;
    gap: 1rem;
    font-size:12px;
    color:#121212;
  }
    .footer__social {
    display: flex;
    gap: 1rem;
    font-size: 12px;
    color: #121212;
  }

{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    },
    {
  "type": "checkbox",
  "id": "show_social",
  "label": "Show social links",
  "default": false
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    }

  ]
}
{% endschema %}
