{{ 'scrolling-promo.css' | asset_url | stylesheet_tag }}

      <style>
      #fract-scrolling-promotion-section--{{ section.id }} {
      position:relative !important;
      top:0 !important;
    }
    .fract-scrolling-promotion-section {
    max-width: 100%;
  </style>
<style>
  #fract-scrolling-promotion-section--{{ section.id }} {
    --item-gap: {{ section.settings.item_gap }}px;
    --item-gap-mobile: {{ section.settings.item_gap_mobile }}px;
    --duration: {{ section.settings.speed }}s;
    position: absolute;
    top: 20px;
    width:100%;
    z-index:9;
  }
    .fract-scrolling-promotion-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin: 0 auto;
    max-width: 100%;
    }
</style>
<section
  id="fract-scrolling-promotion-section--{{ section.id }}"
  class="bar-promo "
  style="background:{{ section.settings.bg-color-sub }}; color:{{ section.settings.text-color-sub }}; font-variant:small-caps"
  data-section-type="fract-scrolling-promotion"
  data-section-id="{{ section.id }}"
>
  <div style="" class="fract-scrolling-promotion-section ">
    <fract-scrolling-promotion
      class="fract-scrolling-promotion fract-scrolling-promotion--{{ section.settings.direction }}"
    >
      <div class="m-promotion">
        {% for block in section.blocks %}
          <div class="m-promotion__item">
            {% if block.settings.text_link != blank -%}
              <a target="_blank" href="{{ block.settings.text_link }}" class="m-promotion__item--link">
            {%- endif %}
            {% if block.settings.custom_svg != blank %}
              <span class="m-promotion__icon m-promotion__icon--{{ block.settings.icon_size }}">
                {{- block.settings.custom_svg -}}
              </span>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="m-promotion__text" style="--text-size: {{ block.settings.text_size }}px;   font-family: 'Quantico', sans-serif !important;">
                {{ block.settings.text }}
              </div>
            {% endif %}
            {% if block.settings.text_link != blank %}</a>{% endif %}
          </div>
        {% endfor %}
      </div>
    </fract-scrolling-promotion>
  </div>
</section>

<script>
class FractScrollingPromotion extends HTMLElement {
  constructor() {
    super();
    this.promotion = null;
  }

  connectedCallback() {
    this.promotion = this.querySelector('.m-promotion');
    if (!this.promotion) return;
    this.init();
  }

  init() {
    // Only animate if there's at least 1 child
    if (this.promotion.children.length > 0) {
      this.promotion.classList.add('m-promotion--animated');

      // Clone the items to loop
      for (let i = 0; i < 10; i++) {
        const clone = this.promotion.cloneNode(true);
        clone.setAttribute('aria-hidden', 'true');
        this.appendChild(clone);
      }

      // Intersection observer
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              this.scrollingPlay();
            } else {
              this.scrollingPause();
            }
          });
        },
        { rootMargin: '0px 0px 50px 0px' }
      );

      observer.observe(this);
    }
  }

  scrollingPlay() {
    this.classList.remove('fract-scrolling-promotion--paused');
  }

  scrollingPause() {
    this.classList.add('fract-scrolling-promotion--paused');
  }
}

if (!customElements.get('fract-scrolling-promotion')) {
  customElements.define('fract-scrolling-promotion', FractScrollingPromotion);
}

</script>

