<script>
document.addEventListener('DOMContentLoaded', function () {
  const productId = '{{ product.id }}';
  const formSelector = `#product-form-${productId}`;
  const formEl = document.querySelector(formSelector);
  if (!formEl) return;

  const qtyInput = formEl.querySelector('.qty-input');
  const variantIdInput = document.getElementById(`selected-variant-id-${productId}`);
  const addToCartBtn = formEl.querySelector('[data-add-to-cart]');

  /* ==============================
     VARIANT HELPERS
  ============================== */

  function getVariantButton(variantId) {
    return formEl.querySelector(
      `.variant-button[data-variant-id="${variantId}"]`
    );
  }

  function getMaxForVariant(variantId) {
    const btn = getVariantButton(variantId);
    if (!btn) return null;

    const raw = btn.getAttribute('data-max');
    const max = raw ? Number(raw) : null;
    return !max || isNaN(max) || max <= 0 ? null : max;
  }

  /* ==============================
     ADD TO CART STATE (NEW)
  ============================== */

  function updateAddToCartState(variantId) {
    if (!addToCartBtn) return;

    const variantBtn = getVariantButton(variantId);
    if (!variantBtn) return;

    const isAvailable = variantBtn.getAttribute('data-available') === 'true';

    if (!isAvailable) {
      addToCartBtn.textContent = 'Sold out';
      addToCartBtn.disabled = true;
      addToCartBtn.classList.add('is-sold-out');
    } else {
      addToCartBtn.textContent = 'Add to cart';
      addToCartBtn.disabled = false;
      addToCartBtn.classList.remove('is-sold-out');
    }
  }

  /* ==============================
     QTY LIMITS
  ============================== */

  function applyMax() {
    if (!qtyInput || !variantIdInput) return;

    const max = getMaxForVariant(variantIdInput.value);
    if (max === null) {
      qtyInput.removeAttribute('max');
      return;
    }

    qtyInput.max = max;
    if (+qtyInput.value > max) {
      qtyInput.value = max;
    }
  }

  /* ==============================
     STOCK INDICATOR
  ============================== */

  function updateStockIndicator(variantId) {
    const wrapper = document.querySelector('[data-stock-indicator]');
    if (!wrapper) return;

    const state = wrapper.querySelector('[data-stock-indicator-state]');
    const text = wrapper.querySelector('.stock-indicator-text');
    if (!state || !text) return;

    const btn = getVariantButton(variantId);
    if (!btn) return;

    const max = Number(btn.getAttribute('data-max'));
    const available = btn.getAttribute('data-available') === 'true';

    let label = 'In Stock';
    let cls = 'in-stock';

    if (!available || max === 0) {
      label = 'Out of Stock';
      cls = 'out-of-stock';
    } else if (!isNaN(max) && max < 11) {
      label = 'Limited Stock';
      cls = 'low-stock';
    }

    state.className = `stock-indicator ${cls}`;
    text.textContent = label;
  }

  /* ==============================
     INITIAL LOAD
  ============================== */

  if (variantIdInput) {
    applyMax();
    updateStockIndicator(variantIdInput.value);
    updateAddToCartState(variantIdInput.value);
  }

  /* ==============================
     CLICK HANDLING
  ============================== */

  document.addEventListener('click', function (e) {
    const target = e.target;
    const form = target.closest(formSelector);
    if (!form) return;

    /* VARIANT CLICK */
    if (target.classList.contains('variant-button')) {
      if (target.disabled) return;

      form.querySelectorAll('.variant-button')
        .forEach(btn => btn.classList.remove('active'));

      target.classList.add('active');

      variantIdInput.value = target.dataset.variantId;

      applyMax();
      updateStockIndicator(target.dataset.variantId);
      updateAddToCartState(target.dataset.variantId);
      return;
    }

    /* QTY + / - */
    if (target.classList.contains('qty-btn')) {
      const isPlus = target.classList.contains('plus');
      const min = 1;
      const max = qtyInput.max ? Number(qtyInput.max) : null;
      let value = Number(qtyInput.value) || min;

      if (isPlus && (!max || value < max)) value++;
      if (!isPlus && value > min) value--;

      qtyInput.value = value;
    }
  });

  /* ==============================
     MANUAL QTY ENTRY
  ============================== */

  qtyInput?.addEventListener('change', function () {
    const min = 1;
    const max = this.max ? Number(this.max) : null;
    let value = Number(this.value) || min;

    if (value < min) value = min;
    if (max && value > max) value = max;

    this.value = value;
  });
});
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const detailsElements = document.querySelectorAll('.custom-accordion details');

    // ✅ Open the first one by default
    if (detailsElements.length > 0) {
      detailsElements[0].setAttribute('open', '');
    }

    detailsElements.forEach((detail) => {
      detail.addEventListener('toggle', function() {
        if (this.open) {
          detailsElements.forEach((otherDetail) => {
            if (otherDetail !== this && otherDetail.open) {
              otherDetail.open = false;
            }
          });
        }
      });
    });
  });

</script>



