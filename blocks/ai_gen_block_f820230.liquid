{% style %}
  .fract-contact-form {
    --main-color: {{ section.settings.main_color }};
    max-width: 600px;
    margin: 0 auto;
    padding: 40px;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
  }

  .fract-contact-form__heading {
    color: {{ section.settings.text_color }};
    margin: 0 0 32px 0;
    text-align: center;
  }

  .fract-contact-form__content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .fract-contact-form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .fract-contact-form__field {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .fract-contact-form__label {
    color: {{ section.settings.text_color }};
    font-weight: 600;
  }

  .fract-contact-form__input,
  .fract-contact-form__textarea {
    padding: 16px;
    border: 2px solid {{ section.settings.input_border_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    background-color: {{ section.settings.input_background_color }};
    color: {{ section.settings.input_text_color }};
    transition: border-color 0.3s ease;
  }

  .fract-contact-form__input:focus,
  .fract-contact-form__textarea:focus {
    outline: none;
    border-color: var(--main-color);
  }

  .fract-contact-form__textarea {
    min-height: 120px;
    resize: vertical;
    font-family: inherit;
  }

  .fract-contact-form__success {
    color: {{ section.settings.success_color }};
    padding: 16px;
    background-color: {{ section.settings.success_bg_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    text-align: center;
  }

  .fract-contact-form__error {
    color: {{ section.settings.error_color }};
    font-size: 14px;
    margin-top: 4px;
  }

  @media screen and (max-width: 749px) {
    .fract-contact-form {
      padding: 24px;
    }

    .fract-contact-form__row {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="fract-contact-form">
  {% if section.settings.heading != blank %}
    <h2 class="fract-contact-form__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% form 'contact' %}
    <div class="fract-contact-form__content">
      {% if form.posted_successfully? %}
        <div class="fract-contact-form__success">
          {{ section.settings.success_message }}
        </div>
      {% else %}
        <div class="fract-contact-form__row">
          <div class="fract-contact-form__field">
            <label for="contact-name" class="fract-contact-form__label">Name *</label>
            <input
              type="text"
              id="contact-name"
              name="contact[name]"
              class="fract-contact-form__input"
              value="{{ form.name }}"
              required
              {% if form.errors contains 'name' %}
                aria-invalid="true"
                aria-describedby="contact-name-error"
              {% endif %}
            >
            {% if form.errors contains 'name' %}
              <div id="contact-name-error" class="fract-contact-form__error">{{ form.errors.messages.name }}</div>
            {% endif %}
          </div>

          <div class="fract-contact-form__field">
            <label for="contact-email" class="fract-contact-form__label">Email *</label>
            <input
              type="email"
              id="contact-email"
              name="contact[email]"
              class="fract-contact-form__input"
              value="{{ form.email }}"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              required
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="contact-email-error"
              {% endif %}
            >
            {% if form.errors contains 'email' %}
              <div id="contact-email-error" class="fract-contact-form__error">{{ form.errors.messages.email }}</div>
            {% endif %}
          </div>
        </div>

        <div class="fract-contact-form__row">
          <div class="fract-contact-form__field">
            <label for="contact-phone" class="fract-contact-form__label">Phone Number</label>
            <input
              type="tel"
              id="contact-phone"
              name="contact[phone]"
              class="fract-contact-form__input"
              value="{{ form.phone }}"
              autocomplete="tel"
            >
          </div>

          <div class="fract-contact-form__field">
            <label for="contact-subject" class="fract-contact-form__label">Subject *</label>
            <input
              type="text"
              id="contact-subject"
              name="contact[subject]"
              class="fract-contact-form__input"
              value="{{ form.subject }}"
              required
            >
          </div>
        </div>

        <div class="fract-contact-form__field">
          <label for="contact-message" class="fract-contact-form__label">Message *</label>
          <textarea
            id="contact-message"
            name="contact[body]"
            class="fract-contact-form__textarea"
            required
            {% if form.errors contains 'body' %}
              aria-invalid="true"
              aria-describedby="contact-message-error"
            {% endif %}
          >{{ form.body }}</textarea>
          {% if form.errors contains 'body' %}
            <div id="contact-message-error" class="fract-contact-form__error">{{ form.errors.messages.body }}</div>
          {% endif %}
        </div>

        <button type="submit" class="{{ section.settings.button_style }}">
          {{ section.settings.button_text }}
        </button>
      {% endif %}
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact Form",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Send Message"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thank you for your message! We'll get back to you soon."
    },
    {
      "type": "header",
      "content": "Button Style"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "primary"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "main_color",
      "label": "Main color",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "input_background_color",
      "label": "Input background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "input_text_color",
      "label": "Input text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input border color",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "success_color",
      "label": "Success text color",
      "default": "#008060"
    },
    {
      "type": "color",
      "id": "success_bg_color",
      "label": "Success background color",
      "default": "#f0f9f6"
    },
    {
      "type": "color",
      "id": "error_color",
      "label": "Error color",
      "default": "#d82c0d"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Form border radius",
      "default": 12
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Input border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}