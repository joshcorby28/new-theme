<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productId = '{{ product.id }}';
    const formSelector = `#product-form-${productId}`;
    const formEl = document.querySelector(formSelector);
    if (!formEl) {
      console.log('[qty-debug] No product form found for', productId);
      return;
    }

    function getMaxForVariant(variantId) {
      const button = formEl.querySelector(`.variant-button[data-variant-id="${variantId}"]`);
      if (!button) {
        console.log('[qty-debug] No variant button found for variant', variantId);
        return null;
      }

      const raw = button.getAttribute('data-max');
      if (raw === null || raw === '') {
        console.log('[qty-debug] Variant has no data-max, treating as uncapped', variantId);
        return null;
      }

      const qty = Number(raw);
      if (isNaN(qty) || qty <= 0) {
        console.log('[qty-debug] Variant data-max not positive, treating as uncapped', variantId, raw);
        return null;
      }

      console.log('[qty-debug] Max for variant from data-max', variantId, 'is', qty);
      return qty;
    }

    function applyMax(qtyInput, variantIdInput) {
      if (!qtyInput || !variantIdInput) return;
      const currentVariantId = variantIdInput.value;
      const max = getMaxForVariant(currentVariantId);
      if (max === null) {
        qtyInput.removeAttribute('max');
      } else {
        qtyInput.max = String(max);
        if (Number(qtyInput.value) > max) {
          qtyInput.value = max;
        }
      }
    }

    function updateStockIndicator(variantId) {
      const wrapper = document.querySelector('.stock-indicator-wrapper[data-stock-indicator]');
      if (!wrapper) return;

      const stateEl = wrapper.querySelector('[data-stock-indicator-state]');
      const textEl = wrapper.querySelector('.stock-indicator-text');
      if (!stateEl || !textEl) return;

      const button = formEl.querySelector(`.variant-button[data-variant-id="${variantId}"]`);
      if (!button) return;

      const rawMax = button.getAttribute('data-max');
      const rawAvailable = button.getAttribute('data-available');
      const max = rawMax !== null && rawMax !== '' ? Number(rawMax) : null;
      const available = rawAvailable === 'true';

      let statusText = 'In Stock';
      let cssClass = 'in-stock';

      if (!available || max === 0) {
        statusText = 'Out of Stock';
        cssClass = 'out-of-stock';
      } else if (max !== null && !isNaN(max) && max < 11) {
        statusText = 'Limited Stock';
        cssClass = 'low-stock';
      }

      stateEl.classList.remove('in-stock', 'low-stock', 'out-of-stock');
      stateEl.classList.add(cssClass);
      textEl.textContent = statusText;
    }

    // Initial max and stock indicator on load
    const initialQtyInput = formEl.querySelector('.quantity-selector .qty-input');
    const initialVariantInput = document.getElementById(`selected-variant-id-${productId}`);
    if (initialQtyInput && initialVariantInput) {
      applyMax(initialQtyInput, initialVariantInput);
      updateStockIndicator(initialVariantInput.value);
    }

    // Delegated click handling for variant buttons and qty +/- inside this product form
    document.addEventListener('click', function(event) {
      const target = event.target;
      const form = target.closest(formSelector);
      if (!form) return;

      // Variant button click
      if (target.classList.contains('variant-button')) {
        if (target.disabled) return;

        const variantButtons = form.querySelectorAll('.variant-button');
        variantButtons.forEach(function(btn) { btn.classList.remove('active'); });
        target.classList.add('active');

        const variantIdInput = document.getElementById(`selected-variant-id-${productId}`);
        if (variantIdInput) {
          variantIdInput.value = target.dataset.variantId;
        }

        const qtyInput = form.querySelector('.quantity-selector .qty-input');
        applyMax(qtyInput, variantIdInput);
        if (variantIdInput) {
          updateStockIndicator(variantIdInput.value);
        }
        return;
      }

      // Quantity plus/minus click
      if (target.classList.contains('qty-btn')) {
        const isPlus = target.classList.contains('plus');
        const isMinus = target.classList.contains('minus');
        const qtyInput = form.querySelector('.quantity-selector .qty-input');
        const variantIdInput = document.getElementById(`selected-variant-id-${productId}`);

        if (!qtyInput) {
          console.log('[qty-debug] No qty input found in form for click');
          return;
        }

        const min = Number(qtyInput.min) || 1;
        const maxAttr = qtyInput.getAttribute('max');
        const max = maxAttr ? Number(maxAttr) : null;
        let current = Number(qtyInput.value) || min;

        if (isPlus) {
          if (max !== null && !isNaN(max) && current >= max) {
            console.log('[qty-debug] Product plus click at max, ignoring', { current, max });
            return;
          }

          let next = current + 1;
          if (max !== null && !isNaN(max) && next > max) {
            next = max;
          }

          console.log('[qty-debug] Product plus click', { current, next, max });
          qtyInput.value = next;
        } else if (isMinus) {
          if (current <= min) {
            console.log('[qty-debug] Product minus click at min, ignoring', { current, min });
            return;
          }

          const next = current - 1;
          console.log('[qty-debug] Product minus click', { current, next });
          qtyInput.value = next;
        }

        applyMax(qtyInput, variantIdInput);
        qtyInput.dispatchEvent(new Event('change', { bubbles: true }));
      }
    });

    // Clamp manual typing in the qty input for this product form
    document.addEventListener('change', function(event) {
      const target = event.target;
      if (!target.matches('.quantity-selector .qty-input')) return;

      const form = target.closest(formSelector);
      if (!form) return;

      const min = Number(target.min) || 1;
      const maxAttr = target.getAttribute('max');
      const max = maxAttr ? Number(maxAttr) : null;
      let value = Number(target.value) || min;

      if (value < min) {
        console.log('[qty-debug] Manual change below min, clamping', { from: target.value, to: min });
        value = min;
      }

      if (max !== null && !isNaN(max) && value > max) {
        console.log('[qty-debug] Manual change above max, clamping', { from: target.value, to: max });
        value = max;
      }

      target.value = value;
    });
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const detailsElements = document.querySelectorAll('.custom-accordion details');

    // ✅ Open the first one by default
    if (detailsElements.length > 0) {
      detailsElements[0].setAttribute('open', '');
    }

    detailsElements.forEach((detail) => {
      detail.addEventListener('toggle', function() {
        if (this.open) {
          detailsElements.forEach((otherDetail) => {
            if (otherDetail !== this && otherDetail.open) {
              otherDetail.open = false;
            }
          });
        }
      });
    });
  });

</script>



