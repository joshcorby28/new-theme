<div class="fract-image-text-section">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image_block' %}
        <div class="fract-image-text-block image-block">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: '800x' }}" alt="Block image" loading="lazy" />
          {% endif %}
        </div>

      {% when 'text_block' %}
        <div class="fract-image-text-block text-block">
          {% if block.settings.heading %}
            <h3>{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.body %}
            <span>{{ block.settings.body }}</span>
          {% endif %}
          {% if block.settings.button_link and block.settings.button_label %}
            <a href="{{ block.settings.button_link }}" class="{{ block.settings.button_style }}">{{ block.settings.button_label }}</a>
          {% endif %}
        </div>
    {% endcase %}
  {% endfor %}
</div>



{% schema %}
{
  "name": "Image and Text Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "body",
          "label": "Body Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "fract-primary",
          "options": [
            { "value": "fract-primary", "label": "Primary" },
            { "value": "fract-secondary", "label": "Secondary" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image and Text Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
.fract-image-text-section {
  display: flex;
  flex-direction: column;
  gap: 40px;
  margin: 30px auto;
  max-width:95%;
}

.fract-image-text-block {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.fract-image-text-block img {
  width: 100%;
  height: auto;
  display: block;
}

.fract-image-text-block h3 {
  font-size: 1.5rem;
  margin: 0;
}

.fract-image-text-block span {
  font-size: 1rem;
  color: #333;
}

.fract-image-text-block a {
  text-decoration: none;
}

@media screen and (min-width: 768px) {
  .fract-image-text-section {
    flex-direction: row;
    flex-wrap: wrap;
    gap: 40px;
  }

  .fract-image-text-block {
    flex: 1 1 45%;
  }
}


</style>