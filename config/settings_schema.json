[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
{
  "name": "Grain Effect",
  "settings": [
    {
      "type": "header",
      "content": "Grain Effect"
    },
    {
      "type": "checkbox",
      "id": "grunge-effect",
      "default": true,
      "label": "Grainy Effect Overlay"
    },
    {
      "type": "range",
      "id": "grain-opacity",
      "label": "Opacity",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "default": 0.1
    }
  ]
},
  {
    "name": "Header",
    "settings": [
      {
      "type": "checkbox",
      "id": "spin-logo",
      "default": true,
      "label": "Logo 3d spin"
    },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },
            {
        "type": "image_picker",
        "id": "logo-solid",
        "label": "Logo Image (Solid BG)"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width (px)",
        "default": 200,
        "min": 50,
        "max": 500,
        "step": 10
      }
    ]
  },
    {
    "name": "Audio Player",
    "settings": [
      {
        "type": "url",
        "id": "player_audio",
        "label": "Audio MP3 File"
      },
      {
        "type": "image_picker",
        "id": "player_image",
        "label": "Record Image"
      }
    ]
  },
  {
  "name": "Preloader Settings",
  "settings": [

  {
    "type": "number",
    "id": "preloader_delay_seconds",
    "label": "Preloader delay (seconds)",
    "default": 5,
    "info": "Time (in seconds) before the preloader disappears"
  },

    {
      "type": "color",
      "id": "preloader_bg",
      "label": "Preloader Background Color",
      "default": "#ffffff"
    },
    {
      "type": "radio",
      "id": "preloader_mode",
      "label": "Preloader Mode",
      "default": "text",
      "options": [
        { "label": "Text", "value": "text" },
        { "label": "Image", "value": "image" }
      ]
    },
    {
      "type": "text",
      "id": "preloader_text",
      "label": "Preloader Text",
      "default": "Loading..."
    },
    {
      "type": "image_picker",
      "id": "preloader_image",
      "label": "Preloader Image"
    },
          {
      "type": "checkbox",
      "id": "spin-logo-preloader",
      "default": true,
      "label": "Image 3d spin"
    }
    ]
  },
    {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
        {
          "type": "checkbox",
          "id": "uppercase_headings_links",
          "label": "Uppercase Headings & Links",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "capitalize_spans",
          "label": "Uppercase Span Text",
          "default": false
        },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
    ]
  },
{
  "name": "t:general.layout",
  "settings": [
    {
      "type": "range",
      "id": "page_width",
      "label": "t:labels.page_width",
      "min": 1400,
      "max": 2000,
      "step": 10,
      "unit": "px",
      "default": 1600
    }
  ]
},
{
  "name": "Buttons",
  "settings": [
    {
      "type": "color",
      "id": "primary_button-text",
      "label": "Primary Button Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "primary_button-bg",
      "label": "Primary Button Background",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "second_button-border",
      "label": "Secondary Button Border",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "second_button-text",
      "label": "Secondary Button Text",
      "default": "#121212"
    }
  ]
},
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
      "type": "color",
      "id": "text_color",
      "label": "Accent color",
      "default": "#121212",
      "info": "Used for Text, Selectors and more"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  }
]
