<div class="fract-image-text-section">
  {% for block in section.blocks %}
    <div class="fract-image-text-block">
      {% if block.settings.image %}
        <div class="fract-image-text-image">
          <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading | escape }}" loading="lazy" />
        </div>
      {% endif %}
      <div class="fract-image-text-content">
        {% if block.settings.heading %}
          <h3>{{ block.settings.heading }}</h3>
        {% endif %}
        {% if block.settings.body %}
          <span>{{ block.settings.body }}</span>
        {% endif %}
        {% if block.settings.button_link and block.settings.button_label %}
          <a href="{{ block.settings.button_link }}" class="{{ block.settings.button_style }}">{{ block.settings.button_label }}</a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>


{% schema %}
{
  "name": "Image and Text Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "image_text",
      "name": "Image + Text Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "body",
          "label": "Body Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "default": "fract-primary",
          "options": [
            { "value": "fract-primary", "label": "Primary" },
            { "value": "fract-secondary", "label": "Secondary" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image and Text Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .fract-image-text-section {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.fract-image-text-block {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.fract-image-text-image img {
  width: 100%;
  height: auto;
  display: block;
}

.fract-image-text-content h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.fract-image-text-content span {
  display: block;
  margin-bottom: 15px;
  font-size: 1rem;
  color: #333;
}

.fract-image-text-content a {
  text-decoration: none;
}

@media screen and (min-width: 768px) {
  .fract-image-text-block {
    flex-direction: row;
    align-items: center;
    gap: 40px;
  }

  .fract-image-text-image,
  .fract-image-text-content {
    flex: 1;
  }
}

</style>