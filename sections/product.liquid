{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

{{ 'fract-product.css' | asset_url | stylesheet_tag: preload: true }}

<div class="fract-main-product page-width">
<div class="product-images">
  {% if section.settings.product_image_layout == 'slider' %}
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for image in product.images %}
          <div class="swiper-slide">
            <img src="{{ image | image_url: width: 600 }}" class="product-image" />
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  {% else %}
    {% for image in product.images %}
      <img src="{{ image | image_url: width: 600 }}" class="product-image" />
    {% endfor %}
  {% endif %}
</div>

<div class="fract-info-and-form">
<div class="product-info">
  <h1>{{ product.title }}</h1>
  <h4>{{ product.price | money }}</h4>
</div>

<div class="product-form">
  {% form 'product', product %}
    {% assign current_variant = product.selected_or_first_available_variant %}
    {% for option in product.options_with_values %}
<div class="variant-buttons">
  <div class="variant-group-label">{{ option.name }}</div>
  <form method="post" action="/cart/add">
    <input type="hidden" name="form_type" value="product">
    <input type="hidden" name="utf8" value="âœ“">
    {% for variant in product.variants %}
      <button
        type="submit"
        name="id"
        value="{{ variant.id }}"
        class="variant-button{% if variant == current_variant %} active{% endif %}"
        {% unless variant.available %}disabled{% endunless %}
      >
        {{ variant.title }}
      </button>
    {% endfor %}
  </form>
</div>
{% endfor %}
    <input type="text" name="quantity" min="1" value="1">

    <input type="submit" value="Add to cart">
    {{ form | payment_button }}
  {% endform %}
</div>
</div>
  </div>

{% schema %}
{
  "name": "t:general.product",
  "settings": [
    {
      "type": "select",
      "id": "image_layout",
      "label": "Product image layout",
      "options": [
        {
          "value": "stacked",
          "label": "Stacked"
        },
        {
          "value": "slider",
          "label": "Slider"
        }
      ],
      "default": "stacked"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}


{% if section.settings.product_image_layout == 'slider' %}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      new Swiper('.swiper-container', {
        loop: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true
        },
        slidesPerView: 1,
        spaceBetween: 10
      });
    });
  </script>
{% endif %}


