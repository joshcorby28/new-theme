<footer class="main-footer">
<div class="newsletter" style="--align: {{ section.settings.alignment }};">
  <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="signup-box" id="contact_form" novalidate>
    <label for="email" class="signup-text">
      <h4>{{ section.settings.signup_text }}</h4>
    </label>
    <div class="main-form">
      <input
        type="email"
        name="contact[email]"
        id="email"
        placeholder="{{ section.settings.placeholder_text }}"
        required
      />
      <button type="submit" class="{{ section.settings.button_class }}">
        {{ section.settings.button_text }}
      </button>
    </div>
  </form>
</div>

<style>
  .newsletter {
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    max-width:95%;
    margin:30px auto 0 auto;
    display: flex;
    justify-content: var(--align);
    --input-bg-color: {{ section.settings.input_bg_color }};
  }

  .newsletter .signup-box {
    background-color: var(--bg-color);
    border-radius: 6px;
    max-width: 350px;
  }

  .newsletter .signup-text {
    color: var(--text-color);
    margin-bottom: 12px;
  }

  .newsletter .main-form {
    display: flex;
    margin-top:5px;
    gap: 8px;
  }

  .newsletter input[type="email"] {
    flex: 1;
    padding: 8px;
    border: 1px solid var(--text-color);
    border-radius: 2px;
    background-color: var(--input-bg-color);
    color: var(--text-color);
    box-sizing: border-box;
  }

  .newsletter input::placeholder {
    color: var(--text-color);
  }
</style>

  <div class="footer-inner">
  <div class="footer__copyright">
    &copy;
    {{ 'now' | date: '%Y' }}
    {{ shop.name | link_to: routes.root_url }}, {{ powered_by_link }}
  </div>

  <div class="footer__links">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

      {% if section.settings.show_social %}
    <div class="footer__social">
      {% if section.settings.instagram_url != blank %}
        <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener">Instagram</a>
      {% endif %}
      {% if section.settings.facebook_url != blank %}
        <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener">Facebook</a>
      {% endif %}
      {% if section.settings.youtube_url != blank %}
        <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener">YouTube</a>
      {% endif %}
      {% if section.settings.tiktok_url != blank %}
        <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener">TikTok</a>
      {% endif %}
      {% if section.settings.pinterest_url != blank %}
        <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener">Pinterest</a>
      {% endif %}
    </div>
  {% endif %}


  </div>
</footer>

{% stylesheet %}
  footer {
    margin-top: 2rem;
    border-top:1px solid var(--text-color);
  }
  .footer-inner {
    display: flex;
    padding-top: 2rem;
    padding-bottom: 2rem;
    max-width: 95%;
    margin: 0 auto;
    justify-content: space-between;
  }
  footer a {
    text-decoration: none;
    color: var(--text-color);
  }
  .footer__copyright {
    font-size: 12px;
    color: var(--text-color);
  }
  footer .footer__links,
  footer .footer__payment {
    display: flex;
    gap: 1rem;
    font-size: 12px;
    color: var(--text-color);
  }
  .footer__social {
    display: flex;
    gap: 1rem;
    font-size: 12px;
    color: var(--text-color);
  }

  /* Mobile stacked footer */
  @media (max-width: 680px) {
    .footer-inner {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      text-align: center;
    }
    footer .footer__links,
    footer .footer__payment,
    .footer__social {
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
    }
    .newsletter .main-form {
      max-width:100%;
      width:100%;
    }
  }
{% endstylesheet %}


