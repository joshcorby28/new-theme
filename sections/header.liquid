<header class="main-header">
  <div class="header-inner page-width">
    
    <!-- Logo -->
    <h2 class="header__title">
      {% if settings.logo and template == 'index' %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          <img src="{{ settings.logo | img_url: '300x' }}" alt="{{ shop.name }}"
            class="header__logo {% if settings.spin-logo %} spin {% endif %}"
            style="width: {{ settings.logo_width }}px;" />
        </a>
      {% elsif settings.logo and template == 'collection' %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          <img src="{{ settings.logo | img_url: '300x' }}" alt="{{ shop.name }}"
            class="header__logo {% if settings.spin-logo %} spin {% endif %}"
            style="width: {{ settings.logo_width }}px;" />
        </a>
      {% elsif settings.logo-solid %}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          <img src="{{ settings.logo-solid | img_url: '300x' }}" alt="{{ shop.name }}"
            class="header__logo {% if settings.spin-logo %} spin {% endif %}"
            style="width: {{ settings.logo_width }}px;" />
        </a>
      {% else %}
        {{ shop.name | link_to: routes.root_url }}
      {% endif %}
    </h2>

    <!-- ðŸŸ¢ Menu Toggle (visible on mobile) -->
    <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-expanded="false" aria-controls="mobile-menu-drawer">
      Menu
    </button>

    <!-- ðŸ–¥ Desktop Menu -->
    <nav class="header__menu desktop-menu">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    </nav>

    <!-- ðŸ“± Mobile Drawer Menu -->
    <nav id="mobile-menu-drawer" class="mobile-menu-drawer" aria-hidden="true">
      <button id="mobile-menu-close" class="mobile-menu-close" aria-label="Close menu">Ã—</button>
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="mobile-menu-link">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <!-- Icons (Account, Cart, etc.) -->
    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}
      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}
        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>

  </div>
</header>


<style>
  header {
    height: 3rem;
    background:white;
  }

  .header-inner {
        display: flex;
    align-items: center;
    max-width:95%;
    justify-content: space-between;
    height:100%;
  }
  {% if template == 'index' or template == 'collection' %}
  header a {
    position: relative;
    transition: transform 0.4s ease-in-out;
    text-decoration: none;
    font-size:13px;
    color: {{ section.settings.color-text }};
  }
{% else %}
    header a {
    position: relative;
    transition: transform 0.4s ease-in-out;
    font-size:13px;
    text-decoration: none;
    color: {{ section.settings.color-text-solid }};
  }
{% endif %}

  header a:hover {
  transform: skew(10deg, 10deg);
  transition: transform 0.4s ease-in-out;
}

  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 1.5rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
  @keyframes side-spin {
  from {
    transform: perspective(600px) rotateY(0deg);
  }
  to {
    transform: perspective(600px) rotateY(360deg);
  }
}

.header__logo.spin {
  animation: side-spin 5s linear infinite;
  transform-style: preserve-3d;
}

  /* Hide mobile drawer by default */
.mobile-menu-drawer {
  position: fixed;
  top: 0; left: 0; bottom: 0;
  width: 250px;
  background: white;
  box-shadow: 2px 0 8px rgba(0,0,0,0.2);
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  padding: 2rem 1.5rem;
  overflow-y: auto;
  z-index: 1000;
}

  .mobile-menu-close {
  background: none;
  border: none;
  font-size: 2rem;
  font-weight: bold;
  color: #000;
  cursor: pointer;
  display: block;
  margin-left: auto;
  margin-bottom: 1.5rem;
}


/* Show drawer when active */
.mobile-menu-drawer.open {
  transform: translateX(0);
}

/* Style links stacked */
.mobile-menu-link {
  display: block;
  padding: 1rem 0;
  border-bottom: 1px solid #eee;
  color: #000;
  text-decoration: none;
}

/* Mobile toggle button */
.mobile-menu-toggle {
  background: none;
  border: none;
  font-size: 1rem;
  cursor: pointer;
  display: none; /* hide on desktop */
}

/* Show toggle only on mobile */
@media (max-width: 767px) {
  .desktop-menu {
    display: none !important;
  }
  .mobile-menu-toggle {
    display: inline-block;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggle = document.getElementById('mobile-menu-toggle');
  const drawer = document.getElementById('mobile-menu-drawer');
  const closeBtn = document.getElementById('mobile-menu-close');

  function openDrawer() {
    toggle.setAttribute('aria-expanded', 'true');
    drawer.classList.add('open');
    drawer.setAttribute('aria-hidden', 'false');
  }

  function closeDrawer() {
    toggle.setAttribute('aria-expanded', 'false');
    drawer.classList.remove('open');
    drawer.setAttribute('aria-hidden', 'true');
  }

  toggle.addEventListener('click', openDrawer);
  closeBtn.addEventListener('click', closeDrawer);
});

</script>
{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "color",
      "id": "color-text",
      "label": "Link text color",
      "default": "#000000"
    },
       {
      "type": "color",
      "id": "color-text-solid",
      "label": "Link text color (Solid BG)",
      "default": "#000000"
    }
  ]
}
{% endschema %}

